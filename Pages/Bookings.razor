@page "/bookings"
@using Models
@using Authentication
@using Data
    <a class="btn btn-primary" href='/addBooking'>Add</a>

<div class="card mt-4">
    <h4 class="card-header">Bookings</h4>
    <div class="card-body">
       
        @if (loading)
        {
            <div class="spinner-border spinner-border-sm"></div>
        }
        @if (reservations != null)
        {
    <ul>
        
    @foreach (var reservation in reservations)
    {
        <tr>
            <td>@reservation.date</td>
            <td>@reservation.userID</td>
            <td>|
                <a class="btn btn-danger" @onclick="() => DeleteBooking(reservation.userID)">Delete</a>
            </td>
        </tr>
    }
    </ul>
        }
    </div>
</div>
@code {
    private bool loading;
    private List<Reservation> reservations;
    protected override async Task OnInitializedAsync()
    {
        loading = true;
        reservations = await ReservationManager.GetReservations(UserService.GetUser().id);
        loading = false;
    }
    void DeleteBooking(int userId) { }
}
